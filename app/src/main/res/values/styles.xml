<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="checkedIconTint">@color/background_upfront</item>
    </style>

    <style name="CustomDropDownInputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusBottomStart">32dp</item>
        <item name="boxCornerRadiusBottomEnd">32dp</item>
        <item name="boxCornerRadiusTopEnd">32dp</item>
        <item name="boxCornerRadiusTopStart">32dp</item>
    </style>

    <style name="CustomTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomStart">32dp</item>
        <item name="boxCornerRadiusBottomEnd">32dp</item>
        <item name="boxCornerRadiusTopEnd">32dp</item>
        <item name="boxCornerRadiusTopStart">32dp</item>
    </style>

    <style name="CustomOutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/highlight</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="default_swipe_button_style" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="inner_text">Swipe</item>
        <item name="inner_text_color">@color/black</item>
        <item name="inner_text_size">12sp</item>
        <item name="inner_text_gravity">center</item>

        <item name="outer_background_drawable">@drawable/swipe_rounded_gray_corners</item>
        <item name="outer_background_height">40dp</item>

        <item name="button_background_drawable">@drawable/swipe_btn_background</item>
        <item name="button_background_padding">16dp</item>
        <item name="button_background_src">@drawable/rv_right</item>
        <item name="button_width">56dp</item>
        <item name="button_height">56dp</item>

        <item name="trail_enabled">true</item>
        <item name="trail_background_tint">@color/gray</item>

        <item name="has_finish_animation">true</item>
        <item name="has_active_status">true</item>
    </style>

    <style name="GlassButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_glass_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

</resources>